{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "name": "lessons"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "completed": {
      "type": "boolean",
      "default": false
    },
    "files": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
